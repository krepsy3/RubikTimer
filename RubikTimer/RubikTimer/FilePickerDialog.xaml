<Window x:Class="RubikTimer.FilePickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RubikTimer"
        mc:Ignorable="d"
        Title="File pick" Height="300" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" MouseDown="WinMouseDown" Icon="resources/file.png" >
    <Window.CommandBindings>
        <CommandBinding Command="MediaCommands.Select" CanExecute="CanSelect" Executed="Select" />
    </Window.CommandBindings>
    
    <DockPanel>
        <TextBlock Text="Please pick a file from the list:" DockPanel.Dock="Top" Margin="10" />
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Content="OK" Margin="10" MinWidth="50" Command="MediaCommands.Select" />
            <Button Content="Cancel" Margin="10" Click="Exit" MinWidth="50" />
        </StackPanel>
        <ListView Margin="10" ItemsSource="{Binding Files}" x:Name="filesView" MouseDown="ListMouseDown"/>
    </DockPanel>
</Window>
